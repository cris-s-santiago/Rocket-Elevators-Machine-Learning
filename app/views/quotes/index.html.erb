

<section class="dark">
<p id="notice"><%= notice %></p>
  <div class="container">

    <h1 class="fw-800 fs-60 font-roboto" style="text-align: center">Quotes</h1>
    <table class="table table-hover table-bordered" style="width: 35%; margin: auto; padding: 10px; font-size: 18px>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody style="font-size: 18px">
        <% @quotesList.each do |quote| %>
          <tr style="">

            <td style=""><%= quote.name %></td>
            <td>
            <i class="fa fa-eye"></i>
            <%= link_to 'Show', quote %>
            <i class="fa fa-edit"></i>
            <%= link_to 'Edit', edit_quote_path(quote) %>
            <i class="fa fa-trash"></i>
            <%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <br>

    <div style="margin: auto; padding: 10px; font-size: 18px; text-align: center">
      <%= link_to 'New Quote', new_quote_path %>
    </div>
  </div>
</section>
