
<section class="dark">
<h1 class="fw-800 fs-30 font-roboto" style="text-align: center">Log in</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, class: 'form-check-input', as: :boolean if devise_mapping.rememberable?  %>
        </div>
      </div>
    </div>
      
      <div class="col-md-4 col-md-offset-4">
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-outline-secondary form-control' %>
        </div>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
